{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "starts everything",
            "dependsOn": [
                //
                "ğŸ–¼  Front",
                "ğŸ‘  TSC",
                "ğŸ“¦  Daz File Server"
            ],
            "group": { "kind": "build", "isDefault": true },
            "runOptions": { "runOn": "folderOpen", "instanceLimit": 1 }
        },
        {
            "label": "ğŸ“¦  Daz File Server",
            "detail": "Start Bun server for Daz files",
            "type": "process",
            "command": "bun",
            "args": ["run", "--watch", "src/server/fileServer.ts"],
            "isBackground": true,
            "presentation": { "reveal": "never", "close": false },
            "group": "build",
            "runOptions": { "instanceLimit": 1 }
        },
        {
            "label": "ğŸ‘  TSC",
            "detail": "Get all typescript errors in problems pane",
            "type": "process",
            "options": { "env": { "NODE_OPTIONS": "--max-old-space-size=8192" } },
            "command": "./node_modules/.bin/tsc",
            "args": ["--watch", "--noEmit", "--preserveWatchOutput", "--incremental"],
            "isBackground": true,
            "problemMatcher": "$tsc-watch",
            "presentation": { "reveal": "never" },
            "group": { "kind": "build" /* "isDefault": true */ },
            "runOptions": { "runOn": "folderOpen", "instanceLimit": 1 }
        },
        {
            "label": "ğŸ–¼  Front",
            "detail": "start FRONTEND devserver",
            "type": "process",
            "command": "yarn",
            "args": ["dev"],
            "isBackground": true,
            "presentation": { "reveal": "never", "close": false /* "group": "dev-server" */ },
            "group": "build",
            "runOptions": { "instanceLimit": 1 }
        }
    ]
}
